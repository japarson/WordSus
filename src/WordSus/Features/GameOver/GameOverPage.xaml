<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WordSus.Features.GameOver.GameOverPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:go="clr-namespace:WordSus.Features.GameOver"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="GameOverPage"
    x:DataType="go:GameOverPage"
    BackgroundColor="#6a5ae0">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior
            StatusBarColor="#6a5ae0"
            StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <VerticalStackLayout Margin="20">
        <Label
            FontSize="64"
            HorizontalOptions="Center"
            Text="Game Over"
            VerticalOptions="Center" />

        <Label
            FontSize="240"
            HorizontalTextAlignment="Center"
            Text="ðŸ˜­" />

        <Label
            Margin="0,20,0,0"
            FontSize="Large"
            HorizontalTextAlignment="Center"
            Text="{Binding FinalScore, StringFormat='You made it to level {0}!!!'}" />

        <Button
            Margin="0,20,0,0"
            Clicked="PlayAgainButton_Clicked"
            HorizontalOptions="Center"
            Text="Play Again?" />
    </VerticalStackLayout>
</ContentPage>